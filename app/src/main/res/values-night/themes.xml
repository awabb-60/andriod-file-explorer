<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FileExplorer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_mode_theme_color</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOnPrimary</item>
        <item name="colorSecondaryVariant">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <!--        to make the action mode appear over the toolbar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_chevron_left</item>
        <item name="android:actionModeBackground">@color/dark_mode_theme_color</item>
    </style>

    <style name="FileExplorerToolBar">
        <item name="navigationIcon">@drawable/ic_chevron_left</item>
        <item name="android:background">@color/dark_mode_theme_color</item>
    </style>

    <style name="FileListRecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="QuickAccessTaps">
        <item name="tap_background_drawable">@drawable/selected_tap_background_night</item>
    </style>

    <style name="QuickAccessCard">
        <item name="cardBackgroundColor">@color/dark_gray</item>
    </style>

    <style name="QuickAccessFileName" />

    <style name="StorageItem">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="FileItemName">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchField">
        <item name="android:background">@drawable/search_filed_background_night</item>
    </style>

    <style name="PickLocationTaps">
        <item name="tap_background_drawable">@drawable/dialog_background_night</item>
    </style>


    <style name="dialogButtons">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DetailsItemContainer">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DetailsItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="FileExplorerFileIcon">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MediaCategoryItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/media_button_background_night</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.FileExplorer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FileExplorer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FileExplorer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>