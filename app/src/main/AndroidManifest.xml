<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awab.fileexplorer">


    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FileExplorer">
        <activity
            android:name=".view.MediaActivity"
            android:exported="true"
            android:label="@string/title_activity_media"
            android:theme="@style/Theme.FileExplorer.NoActionBar" />
        <activity
            android:name=".view.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.StorageActivity"
            android:exported="true" />

        <service
            android:name=".model.utils.CopyServices"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name=".presenter.CopyBreadCast"
            android:exported="false">
            <intent-filter>
                <action android:name="COPY_BROADCAST_ACTION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>